# ==================================================
# IRIS Assistant - Environment Configuration
# ==================================================
# Version: 2.0.0
# Last Updated: November 2025
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env file to version control
# ==================================================

# --------------------------------------------------
# n8n Configuration
# --------------------------------------------------

# Admin password for n8n web interface
# Change this to a strong password!
N8N_PASSWORD=changeme_to_strong_password

# n8n instance URL (for webhooks)
# Production: Use your actual domain
# Development: Use localhost
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# --------------------------------------------------
# Database Configuration
# --------------------------------------------------

# MySQL connection details (provided by client)
MYSQL_HOST=your-mysql-host.com
MYSQL_PORT=3306
MYSQL_DATABASE=iris_db
MYSQL_USER=readonly_user
MYSQL_PASSWORD=your-mysql-password

# --------------------------------------------------
# Telegram Bot Configuration
# --------------------------------------------------

# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Authorized Telegram User IDs (comma-separated)
# Find your Telegram ID by messaging @userinfobot
AUTHORIZED_TELEGRAM_USERS=123456789,987654321

# --------------------------------------------------
# Anthropic AI Configuration
# --------------------------------------------------

# Claude Sonnet 4 API key
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model configuration
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_MAX_TOKENS=4096

# --------------------------------------------------
# Email Configuration (Mailjet)
# --------------------------------------------------

# Mailjet API credentials
# Get from: https://app.mailjet.com/account/apikeys
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_API_SECRET=your-mailjet-api-secret

# Default sender information
MAILJET_SENDER_EMAIL=noreply@adamsonphil.com
MAILJET_SENDER_NAME=IRIS Assistant

# Allowed recipient domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=adamsonphil.com,iol.ph,duck.com,tidal-solutions.com

# --------------------------------------------------
# Google Sheets Configuration
# --------------------------------------------------

# OAuth2 credentials for Google Sheets API
# Get from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Audit log spreadsheet IDs
GOOGLE_SHEET_AUDIT_LOG_ID=your-google-sheet-id-here
GOOGLE_SHEET_ACCESS_LOG_ID=your-google-sheet-id-here

# --------------------------------------------------
# AWS S3 Configuration (for document links)
# --------------------------------------------------

# S3 bucket information (read-only access)
AWS_S3_BUCKET=adamson-documents-bucket
AWS_S3_REGION=us-west-2
AWS_S3_BASE_URL=https://adamson-documents-bucket.s3.us-west-2.amazonaws.com

# --------------------------------------------------
# Application Settings
# --------------------------------------------------

# Environment (development, staging, production)
APP_ENV=production

# Enable debug logging (true/false)
DEBUG_MODE=false

# Timezone
TZ=Asia/Manila

# --------------------------------------------------
# Weekly Report Configuration
# --------------------------------------------------

# Schedule for weekly reports (cron format)
WEEKLY_REPORT_SCHEDULE=0 18 * * 5
# Default: Fridays at 6:00 PM

# Report recipients (comma-separated emails)
WEEKLY_REPORT_RECIPIENTS=hr@adamsonphil.com,admin@adamsonphil.com

# --------------------------------------------------
# Security Settings
# --------------------------------------------------

# Enable rate limiting (requests per minute)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=30

# Session timeout (minutes)
SESSION_TIMEOUT=60

# --------------------------------------------------
# Optional: OpenAI (Legacy - Not Used in v2.0)
# --------------------------------------------------

# Kept for backward compatibility
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx

# ==================================================
# END OF CONFIGURATION
# ==================================================
